	SELECT * FROM authorbooks WHERE category='Thriller';
	SELECT DISTINCT category FROM authorbooks;
	SELECT * FROM authorbooks WHERE category LIKE '%Paul%' OR name LIKE '%Paul%' OR author LIKE '%Paul%';
	SELECT published_at FROM authorbooks;
	SELECT COUNT(book_id) FROM authorbooks;
	SELECT * FROM author ORDER BY birth_year DESC;
	DELETE FROM author WHERE country='Brazil';
	DELETE FROM authorbooks WHERE category='Sci-Fi';
	DELETE FROM author WHERE last_name LIKE 'H%';
	