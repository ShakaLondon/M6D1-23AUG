CREATE TABLE IF NOT EXISTS 
author(
	author_id INTEGER PRIMARY KEY GENERATED ALWAYS AS IDENTITY,
	name VARCHAR(50) NOT NULL,
	last_name VARCHAR(50) NOT NULL,
	birth_year NUMERIC(4) NOT NULL,
	country VARCHAR(50) NOT NULL
	);
